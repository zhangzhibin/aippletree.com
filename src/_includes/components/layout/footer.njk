<footer class="footer">
    <div class="footer-content">
        <p>&copy; {{ page.date.getFullYear() }} {{ site.name }}. All rights reserved.</p>
        <div class="footer-decoration">
            <span class="leaf leaf-1">🍃</span>
            <span class="leaf leaf-2">🍃</span>
            <span class="leaf leaf-3">🍃</span>
        </div>
        <div class="footer-links">
            {% if site.social.github %}
            <a href="{{ site.social.github }}" target="_blank" rel="noopener noreferrer">GitHub</a>
            {% endif %}
            {% if site.social.twitter %}
            <a href="{{ site.social.twitter }}" target="_blank" rel="noopener noreferrer">Twitter</a>
            {% endif %}
            {% if site.contact.email %}
            <a href="mailto:{{ site.contact.email }}">Contact</a>
            {% endif %}
        </div>
    </div>
</footer> 