<section id="{{ section.id }}" class="{{ section.class }}">
  <div class="container">
    <div class="section-header">
      <h2>{{ section.title }}</h2>
      {% if section.viewAll %}
      <a href="{{ section.viewAll.url }}" class="view-all">{{ section.viewAll.text }}</a>
      {% endif %}
    </div>

    <div class="blog-grid">
      {% set posts = collections.posts | reverse %}
      {% for post in posts | limit(section.limit) %}
        {% include "components/ui/blog-card.njk" %}
      {% endfor %}
    </div>
  </div>
</section> 