{% if ai_metadata %}
<div class="ai-metadata">
    <div class="ai-metadata-badges">
        {% if ai_metadata.generated %}
        <span class="ai-badge ai-generated">AI Generated</span>
        {% endif %}
        {% if ai_metadata.edited %}
        <span class="ai-badge human-edited">Human Edited</span>
        {% endif %}
        {% if ai_metadata.reviewed %}
        <span class="ai-badge human-reviewed">Human Reviewed</span>
        {% endif %}
        {% if ai_metadata.ai_reviewed %}
        <span class="ai-badge ai-reviewed">AI Reviewed</span>
        {% endif %}
        {% if ai_metadata.test_data %}
        <span class="ai-badge test-data">Test Data</span>
        {% endif %}
    </div>
</div>
{% endif %} 