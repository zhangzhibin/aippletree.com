{% if ai_metadata %}
<div class="ai-metadata">
  <div class="ai-metadata-badges">
    {% if ai_metadata.is_ai_generated %}
    <span class="ai-badge ai-generated" title="AI Generated">🤖 Generated</span>
    {% endif %}
    {% if ai_metadata.is_human_edited %}
    <span class="ai-badge human-edited" title="Human Edited">✍️ Edited</span>
    {% endif %}
    {% if ai_metadata.is_human_reviewed %}
    <span class="ai-badge human-reviewed" title="Human Reviewed">👀 Human Reviewed</span>
    {% endif %}
    {% if ai_metadata.is_ai_reviewed %}
    <span class="ai-badge ai-reviewed" title="AI Reviewed">🔍 AI Reviewed</span>
    {% endif %}
    {% if ai_metadata.is_test_data %}
    <span class="ai-badge test-data" title="Test Data">🧪 Test Data</span>
    {% endif %}
  </div>
</div>
{% endif %} 