<section id="articles" class="section">
    <div class="section-content">
        <h2 class="section-title">{{ section.title | default('Latest Articles') }}</h2>
        <!-- Debug info -->
        <div style="display: none;">
            <h4>Debug Info:</h4>
            <div>Section Limit: {{ section.limit }}</div>
            <div>Blog Posts Count: {{ collections.blog | length }}</div>
            <div>Posts:</div>
            {%- for post in collections.blog | reverse -%}
            <div style="margin-left: 20px;">
                - {{ post.data.title }} (date: {{ post.date }})
            </div>
            {%- endfor -%}
        </div>
        <!-- End debug info -->
        <div class="blog-grid">
            {%- for post in collections.blog | reverse -%}
                {%- if loop.index0 < (section.limit | default(6)) -%}
                    {%- include "blog-card.njk" -%}
                {%- endif -%}
            {%- endfor -%}
        </div>
        {%- if section.viewAll -%}
        <div class="section-footer">
            <a href="{{ section.viewAll.url | default('/blog') }}" class="view-all">
                {{ section.viewAll.text | default('View All Articles â†’') }}
            </a>
        </div>
        {%- endif -%}
    </div>
</section> 