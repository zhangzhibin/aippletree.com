<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">{{ hero.title | default('Welcome to AippleTree') }}</h1>
        <p class="hero-subtitle">{{ hero.subtitle | default('Discover Amazing Projects & Insights') }}</p>
        <div class="hero-actions">
            {% if hero.primaryButton %}
            <a href="{{ hero.primaryButton.url }}" class="hero-button primary">{{ hero.primaryButton.text }}</a>
            {% endif %}
            {% if hero.secondaryButton %}
            <a href="{{ hero.secondaryButton.url }}" class="hero-button secondary">{{ hero.secondaryButton.text }}</a>
            {% endif %}
        </div>
    </div>
</section> 