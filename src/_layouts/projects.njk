---
layout: base.njk
hideNewsletter: true
hideGetInTouch: true
---

{%- from "components/card.njk" import projectCard -%}
{%- from "components/pagination.njk" import pagination -%}
{%- from "components/get-in-touch.njk" import getInTouch -%}

<!-- Projects Header -->
<header class="content-header">
    <div class="page-container">
        <h1>Projects</h1>
        <p class="content-description">Explore our innovative projects at the intersection of technology and creativity.</p>
    </div>
</header>

<!-- Featured Project -->
<section class="featured-project">
    <div class="page-container">
        <h2>Featured Project</h2>
        {%- set featuredProject = collections.projects | find("featured", true) -%}
        {%- if featuredProject -%}
        <div class="featured-project-content">
            <div class="featured-project-image">
                <img src="{{ featuredProject.data.thumbnail | defaultThumbnail }}" alt="{{ featuredProject.data.title }}">
            </div>
            <div class="featured-project-info">
                <h3>{{ featuredProject.data.title }}</h3>
                <p>{{ featuredProject.data.description }}</p>
                <div class="featured-project-tech">
                    {%- for tech in featuredProject.data.techStack | defaultTechStack -%}
                    <span class="tech-tag">{{ tech }}</span>
                    {%- endfor -%}
                </div>
                <a href="{{ featuredProject.url }}" class="button button-primary">Learn More</a>
            </div>
        </div>
        {%- endif -%}
    </div>
</section>

<!-- Projects Content -->
<div class="page-container">
    <!-- Projects Grid -->
    <div class="grid grid-3">
        {%- for project in paged.projects -%}
        <div data-technologies="{{ project.data.techStack | defaultTechStack | join(' ') }}" data-category="{{ project.data.category }}">
            {{ projectCard(project) }}
        </div>
        {%- endfor -%}
    </div>

    <!-- No Results Message -->
    <div class="no-results" style="display: none;">
        <p>No projects found matching your criteria.</p>
        <button class="button button-secondary" onclick="resetFilters()">Reset Filters</button>
    </div>

    <!-- Pagination -->
    <div class="pagination-wrapper">
        {{ pagination("/projects/", paged.pageNumber, paged.totalPages) }}
    </div>
</div>
