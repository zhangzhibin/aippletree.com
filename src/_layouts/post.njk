---
layout: base.njk
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            {% include "components/ui/post-meta.njk" %}
            {% include "components/ui/post-tags.njk" %}
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    {% if author %}
    <footer class="post-footer">
        {% include "components/ui/author-info.njk" %}
    </footer>
    {% endif %}
</article> 