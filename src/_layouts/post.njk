---
layout: base.njk
templateClass: template-post
bodyClass: page-post
seo:
  changefreq: monthly
  priority: 0.7
  robots: index, follow
components:
  header: {}
  footer:
    showNewsletter: true
---

<article class="post">
    <header class="post-header">
        <h1 class="post-title">{{ title }}</h1>
        <div class="post-meta">
            <time datetime="{{ date | dateToISO }}">{{ date | formatDate }}</time>
            {% if tags %}
            <div class="post-tags">
                {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="post-content">
        {{ content | safe }}
    </div>

    {% if author %}
    <footer class="post-footer">
        {% include "components/ui/author-info.njk" %}
    </footer>
    {% endif %}
</article> 