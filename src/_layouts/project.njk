---
layout: base.njk
hideNewsletter: true
hideGetInTouch: true
---

<article class="content-article">
    <!-- Project Header -->
    <header class="project-header">
        <div class="page-container">
            <div class="project-meta">
                <span class="project-category">{{ category }}</span>
                <span class="project-year">{{ year }}</span>
            </div>
            <h1>{{ title }}</h1>
            {%- if description -%}
            <p class="content-description">{{ description }}</p>
            {%- endif -%}
            <div class="project-tech">
                {%- for tech in techStack | defaultTechStack -%}
                <span class="tech-tag">{{ tech }}</span>
                {%- endfor -%}
            </div>
        </div>
    </header>

    <!-- Project Gallery -->
    {%- if gallery -%}
    <div class="project-gallery">
        <div class="page-container">
            <div class="gallery-grid">
                {%- for image in gallery -%}
                <div class="gallery-item">
                    <img src="{{ image.url }}" alt="{{ image.caption }}">
                    {%- if image.caption -%}
                    <p class="gallery-caption">{{ image.caption }}</p>
                    {%- endif -%}
                </div>
                {%- endfor -%}
            </div>
        </div>
    </div>
    {%- endif -%}

    <!-- Project Content -->
    <div class="content-body">
        <div class="page-container">
            {{ content | safe }}
        </div>
    </div>

    <!-- Project Features -->
    {%- if features -%}
    <section class="project-features">
        <div class="page-container">
            <h2>Key Features</h2>
            <div class="features-grid">
                {%- for feature in features -%}
                <div class="feature-item">
                    <h3>{{ feature.title }}</h3>
                    <p>{{ feature.description }}</p>
                </div>
                {%- endfor -%}
            </div>
        </div>
    </section>
    {%- endif -%}

    <!-- Project Links -->
    {%- if links -%}
    <section class="project-links">
        <div class="page-container">
            <h2>Project Links</h2>
            <div class="links-grid">
                {%- if links.demo -%}
                <a href="{{ links.demo }}" class="button button-primary" target="_blank" rel="noopener">
                    View Demo
                </a>
                {%- endif -%}
                {%- if links.github -%}
                <a href="{{ links.github }}" class="button button-secondary" target="_blank" rel="noopener">
                    View on GitHub
                </a>
                {%- endif -%}
                {%- if links.documentation -%}
                <a href="{{ links.documentation }}" class="button button-secondary" target="_blank" rel="noopener">
                    Documentation
                </a>
                {%- endif -%}
            </div>
        </div>
    </section>
    {%- endif -%}

    <!-- Project Footer -->
    <footer class="content-footer">
        <div class="page-container">
            <!-- Share Buttons -->
            <div class="share-buttons">
                <h3>Share this project</h3>
                <div class="social-share">
                    <a href="https://twitter.com/intent/tweet?text={{ title | urlencode }}&url={{ url | urlencode }}" 
                       target="_blank" 
                       rel="noopener" 
                       class="button button-secondary">
                        Share on Twitter
                    </a>
                    <a href="https://www.linkedin.com/shareArticle?mini=true&url={{ url | urlencode }}&title={{ title | urlencode }}" 
                       target="_blank" 
                       rel="noopener" 
                       class="button button-secondary">
                        Share on LinkedIn
                    </a>
                </div>
            </div>
        </div>
    </footer>
</article>

<!-- Related Projects -->
<section class="related-projects">
    <div class="page-container">
        <h2>Related Projects</h2>
        <div class="grid grid-3">
            {%- from "components/card.njk" import projectCard -%}
            {%- for project in collections.relatedProjects -%}
            {{ projectCard(project) }}
            {%- endfor -%}
        </div>
    </div>
</section>
