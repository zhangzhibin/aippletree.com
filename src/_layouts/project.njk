---
layout: base.njk
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/layouts.css">
    <link rel="stylesheet" href="/css/components.css">
</head>

<article class="project">
    <header class="project-header">
        <div class="project-header-content">
            <h1 class="project-title">{{ title }}</h1>
            {% if description %}
            <p class="project-description">{{ description }}</p>
            {% endif %}
            {% if tags %}
            <div class="project-tags">
                {% for tag in tags %}
                <span class="project-tag">{{ tag }}</span>
                {% endfor %}
            </div>
            {% endif %}
            {% if demo_url or github_url %}
            <div class="project-links">
                {% if demo_url %}
                <a href="{{ demo_url }}" class="project-link demo" target="_blank">View Demo</a>
                {% endif %}
                {% if github_url %}
                <a href="{{ github_url }}" class="project-link github" target="_blank">View Source</a>
                {% endif %}
            </div>
            {% endif %}
        </div>
        {% if thumbnail %}
        <div class="project-thumbnail">
            <img src="{{ thumbnail }}" alt="{{ title }}">
        </div>
        {% endif %}
    </header>

    <div class="project-content">
        {{ content | safe }}
    </div>

    {% if features %}
    <section class="project-features">
        <h2>Key Features</h2>
        <ul class="features-list">
            {% for feature in features %}
            <li class="feature-item">{{ feature }}</li>
            {% endfor %}
        </ul>
    </section>
    {% endif %}

    {% if tech_stack %}
    <section class="project-tech">
        <h2>Tech Stack</h2>
        <ul class="tech-list">
            {% for tech in tech_stack %}
            <li class="tech-item">{{ tech }}</li>
            {% endfor %}
        </ul>
    </section>
    {% endif %}
</article> 