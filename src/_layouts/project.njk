---
layout: base.njk
templateClass: template-project
bodyClass: page-project
seo:
  changefreq: monthly
  priority: 0.7
  robots: index, follow
components:
  header: {}
  footer:
    showNewsletter: true
---

<article class="project">
    <header class="project-header">
        <h1 class="project-title">{{ title }}</h1>
        <div class="project-meta">
            <time datetime="{{ date | dateToISO }}">{{ date | formatDate }}</time>
            {% if tags %}
            <div class="project-tags">
                {% for tag in tags %}
                <a href="/tags/{{ tag }}" class="tag">{{ tag }}</a>
                {% endfor %}
            </div>
            {% endif %}
        </div>
    </header>

    <div class="project-content">
        {{ content | safe }}
    </div>

    {% include "components/ui/project-features.njk" %}
    {% include "components/ui/project-tech.njk" %}
</article> 