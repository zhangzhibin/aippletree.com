---
layout: base.njk
---

<article class="page">
    <header class="page-header">
        {% include "components/ui/page-title.njk" %}
        {% if description %}
        <p class="page-description">{{ description }}</p>
        {% endif %}
    </header>

    <div class="page-content">
        {{ content | safe }}
    </div>

    {% if page.url != "/404.html" and show_contact %}
    <footer class="page-footer">
        <div class="contact-info">
            <h2>Get in Touch</h2>
            {% include "components/ui/contact-links.njk" %}
        </div>
    </footer>
    {% endif %}
</article> 