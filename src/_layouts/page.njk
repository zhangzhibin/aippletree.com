---
layout: base.njk
---

<article class="page">
    <header class="page-header">
        <h1 class="page-title">{{ title }}</h1>
        {% if description %}
        <p class="page-description">{{ description }}</p>
        {% endif %}
    </header>

    <div class="page-content">
        {{ content | safe }}
    </div>
</article>

<style>
    .page {
        max-width: 800px;
        margin: 0 auto;
    }

    .page-header {
        margin-bottom: 2rem;
        text-align: center;
    }

    .page-title {
        font-size: 2.5rem;
        color: var(--text-color);
        margin-bottom: 1rem;
    }

    .page-description {
        font-size: 1.1rem;
        color: #666;
        line-height: 1.6;
    }

    .page-content {
        font-size: 1.1rem;
    }

    .page-content h2 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-size: 1.8rem;
    }

    .page-content h3 {
        margin-top: 1.5rem;
        margin-bottom: 0.75rem;
        font-size: 1.5rem;
    }

    .page-content p {
        margin-bottom: 1.5rem;
    }

    @media (max-width: 768px) {
        .page-title {
            font-size: 2rem;
        }

        .page-content {
            font-size: 1rem;
        }
    }

    @media (max-width: 480px) {
        .page-header {
            margin-bottom: 1.5rem;
        }

        .page-title {
            font-size: 1.75rem;
        }

        .page-description {
            font-size: 1rem;
        }
    }
</style> 